<%= form_with(model: @event, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div id="fights-wrapper">
    <%= form.fields_for :fights do |f| %>
      <%= render partial: 'fight_fields', locals: { f: f } %>
    <% end %>
  </div>

  <%= link_to "Add Fight", "#", id: "add-fight" %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div id="new-fight-template" style="display:none;">
  <%= form_with(model: @event, local: true) do |form| %>
    <%= form.fields_for :fights, Fight.new, child_index: "new_fight" do |f| %>
      <%= render partial: 'fight_fields', locals: { f: f } %>
    <% end %>
  <% end %>
</div>
