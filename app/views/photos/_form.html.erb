<%= form_for [@article, photo], html: { multipart: true } do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: photo} %>

  <div class="form-group">
    <%#= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="actions my-3">
    <%= f.submit 'Загрузить', class: 'btn btn-primary' %>
  </div>
<% end %>
