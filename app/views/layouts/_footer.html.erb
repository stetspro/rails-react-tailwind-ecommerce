                <ul class="social-links list-unstyled list-inline">
              <li class="nav-item m-1">
                <%= link_to "https://api.whatsapp.com/send?phone=1111111", class: 'nav-link', target: '_blank', title: 'Whatsapp' do %>
                  <i class="fa fa-whatsapp fs-6 contact-icon"></i>
                <% end %>
              </li>
              <li class="nav-item m-1">
                <%= link_to "https://instagram.com", class: 'nav-link', target: '_blank', title: 'Instagram' do %>
                  <i class="fa fa-instagram fs-6 contact-icon"></i>
                <% end %>
              </li>
              <li class="nav-item m-1">
