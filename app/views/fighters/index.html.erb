<h1>Fighters</h1>

<div class="row row-cols-md-1 row-cols-lg-2 g-4 d-flex flex-row">
  <% @fighters.each do |fighter| %>
    <div class="col">
      <div class="card text-white bg-dark">
        <%#= image_tag fighter.photo, class: "card-img-top" %>
        <div class="card-body">
          <h4 class="card-title"><%= link_to fighter.name, fighter, class:"nav-link" %></td></h4>
          <p class="card-text">
            <strong>Age:</strong> <%= fighter.age %><br>
            <strong>Weight:</strong> <%= fighter.weight %><br>
            <strong>Professional Record:</strong> <%= fighter.professional_record %><br>
            <strong>City of Origin:</strong> <%= fighter.city_of_origin %><br>
            <strong>Club:</strong> <%= fighter.club %><br>
          </p>
          <% if current_user.admin? %>
            <%= link_to 'Edit', edit_fighter_path(fighter), class: 'btn btn-primary' %>
            <%= link_to 'Destroy', fighter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<br>
<table class="table table-dark table-responsive table-striped table-hover text-white">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Professional Record</th>
      <th>City of Origin</th>
      <th>Club</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fighters.each do |fighter| %>
      <tr>
        <td><%= link_to fighter.name, fighter, class:"nav-link" %></td>
        <td><%= fighter.age %></td>
        <td><%= fighter.weight %></td>
        <td><%= fighter.professional_record %></td>
        <td><%= fighter.city_of_origin %></td>
        <td><%= fighter.club %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_fighter_path(fighter), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Destroy', fighter, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
  <%= link_to 'New Fighter', new_fighter_path %>
<% end %>
