<div class="container mt-4">

  <div class="row d-flex flex-column flex-md-row slide-up">
    <div class="col-12 col-md-8">
      <h1 class="hero-title"><%= t "unleash" %></h1>

      <p class="text-justify"><%= t "join_text" %></p>
      <div class="join-us">
      <a href="mailto:drminingco@gmail.com" target="_blank" title="Email Us" class="btn btn-lg btn-danger join-us-btn"><%= t "join_button" %></a>      </div>
    </div>
    <div class="col-12 col-md-4 bg-dark">
      <%= image_tag "cage1.jpg", class:"announcement-pic" %>
    </div>
  </div>

  <br>

  <p id="shop" class="mt-4 slide-up">
    <%= link_to t("merchandizing"), shop_path, class:"red", target: "_blank" %>
    <i class="fa fa-angle-right mx-2"></i> <%= t "main.best_choice" %>
  </p>
  <br>

  <%= render "shop_block" %>

  <br>

  <p class="mt-4 slide-up"><%= link_to I18n.t("videos_list"), videos_path, class:"red" %> <i class="fa fa-angle-right mx-2"></i> <%= t "fresh_videos" %></p>
  <%= render "videos_block" %>

  <%= render "articles/last_article" if @last_article %>
</div>
